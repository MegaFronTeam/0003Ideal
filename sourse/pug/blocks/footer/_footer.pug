							li
								a(href="#") О компании
							li
								a(href="#") Условия работы
							li
								a(href="#") Новости
							li
								a(href="#") Контакты
				.col-12.col-md-6.order-last
					+e.P.copyright &copy;&nbsp;ООО &laquo;Идеал&raquo; 2021
				.col-12.col-md-6.order-last.align-self-lg-end
					+e.made
						+icon('coalla-logo')
