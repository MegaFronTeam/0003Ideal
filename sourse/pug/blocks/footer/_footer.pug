							li
								a(href="#").h6 Американская классика
							li
								a(href="#").h6 Амстердам
							li
								a(href="#").h6 Берлин
							li
								a(href="#").h6 Гавана
							li
								a(href="#").h6 Париж
							li
								a(href="#").h6 Стокгольм
							li
								a(href="#").h6 Санкт-Петербург
				+e.col-contact-pages.col-auto
